import { Icon } from 'astro-icon/components';
import SocialMedia from './SocialMedia.astro';
const footerLinks = [
  {
    category: 'Features',
    links: [
      {
        name: 'Link Shortening',
        url: '#'
      },
      {
        name: 'Branded Links',
        url: '#'
      },
      {
        name: 'Analytics',
        url: '#'
      },
    ]
  },
  {
    category: 'Resources',
    links: [
      {
        name: 'Blog',
        url: '#'
      },
      {
        name: 'Developers',
        url: '#'
      },
      {
        name: 'Support',
        url: '#'
      },
    ]
  },
  {
    category: 'Company',
    links: [
      {
        name: 'About',
        url: '#'
      },
      {
        name: 'Our Team',
        url: '#'
      },
      {
        name: 'Careers',
        url: '#'
